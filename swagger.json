          "example": "something went wrong"
        }
      }
    },
    "SingleUser": {
      "properties": {
        "schema": {
          "properties": {
            "name": {
              "type": "string",
              "example": "Vasyl"
            },
            "age": {
              "type": "integer",
              "example": 19
            },
            "email": {
              "type": "string",
              "example": "vasyl@gmail.com"
            }
          }
        }
      }
    }
  }
